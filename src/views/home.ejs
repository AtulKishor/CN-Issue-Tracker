<head>
  <style>
    body {
      background-image: url('home_bg.png');
      background-position: center;
      background-size: cover;
    }
  </style>
</head>

<body>
  <!-- Your HTML code here -->
  <div class="mb-5 p-5">
    <% if (projects.length==0){ %>
      <div class="card mb-2 w-50 m-auto">
        <div class="card-header text-danger">
          <h2> No projects available! Please create a project.</h2>
        </div>
      </div>
    <% } else {
      for( let project of projects ) { %>
      <div class="card mb-2 w-50 m-auto">
        <div class="card-header">
          <strong> Name of the project : </strong>
          <%= project.name %>
        </div>
        <div class="card-body">
          <h6 class="card-subtitle mb-2 text-muted">
            <strong> Author : </strong>
            <%= project.author %>
          </h6>
          <p class="card-text">
            <strong> Description : </strong>
            <%= project.description %>
          </p>

          <div class="m-auto text-end">
            <a href="/project/<%=project._id%>" class="btn btn-primary m-auto">Open project</a>
          </div>
        </div>
      </div>
      <% }
    } %>
  </div>
</body>